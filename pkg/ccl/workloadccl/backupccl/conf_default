#!/bin/bash

# conf_default defines the default backup fixture.

# hardware
crdb_nodes=4
cluster_name=$CLUSTER-default
crdb_version=v22.2.1
cloud=aws
machine_type=m5.xlarge
vol_size=1000

# tpce init; creates about 400GB of data
workload="tpc-e"
workload_var=customers
workload_val=25000

# scheduled backup (runs every 15 minutes, for 12 hours once the full completes)
inc_count=48 # specifies the number of incremental backups to create
inc_crontab="*/15 * * * *"
auth="?AUTH=implicit"

# override_latest prevents another full backup chain from getting written to
# this conf's collection. The restore roachtests depend on the LATEST backup chain in
# the collection generated by this script, so script users should only create a new
# backup chain to a new backup collection, or override the existing LATEST
# chain in an existing collection if they are absolutely sure they want to.
override_latest="false"

# tpce run
duration=23h


